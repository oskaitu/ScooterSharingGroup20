<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    >


    <TextView
        android:layout_margin="8dp"
        android:id="@+id/welcome_scooter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:text="@string/welcome_scooter" />

    <Button
        android:layout_margin="8dp"
        android:id="@+id/show_receipt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/show_receipts"
        />
    <Button
        android:layout_margin="8dp"
        android:id="@+id/camera_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/camera"

        />
    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/fragment_geolocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Go to location"
        />

    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/check_api_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/API"
        />
    <TextView
        android:id="@+id/APIversion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20sp"/>

</LinearLayout>